<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/tet_login_login_email"
                android:hint="@string/edittext_login_hint_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/tet_tet_nick_name"
            android:hint="@string/edittext_login_hint_nick_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/tet_login_pass_word"
            android:hint="@string/edittext_login_hint_pass_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
<TextView
    android:textColor="@color/colorWhite"
    android:gravity="center"
    android:textSize="20sp"
    android:background="@mipmap/normalbutton_normal"
    android:text="立即注册"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
</LinearLayout>