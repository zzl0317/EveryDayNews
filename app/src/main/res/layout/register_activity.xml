<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@mipmap/center_top_bg"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <ImageView
            android:id="@+id/iv_register_pic"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"
            android:layout_width="80dp"
            android:layout_height="80dp" />
       <LinearLayout
           android:id="@+id/ll_user"
           android:gravity="center"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="160dp">
           <TextView
               android:gravity="center_vertical"
               android:text="用户名"
               android:id="@+id/tv_user_register"
               android:layout_width="match_parent"
               android:layout_height="30dp" />
           <TextView
               android:gravity="center_vertical"
               android:layout_marginTop="10dp"
               android:text="积分:0"
               android:layout_width="match_parent"
               android:layout_height="30dp" />
       </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:text="跟帖数统计:0"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp" />
    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:textSize="15sp"
            android:text="登录日志"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <ListView
            android:id="@+id/lv_user_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <Button
        android:id="@+id/btn_register_qult"
        android:text="退出登录"
        android:background="@mipmap/btn_1"
        android:textColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="60dp" />
</LinearLayout>